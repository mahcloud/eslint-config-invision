{
	"root": true,
	"env": {
		"es6": true
	},
	"globals": {
		"InVision": true
	},
	"ecmaFeatures": {
		"arrowFunctions": true,
		"blockBindings": true,
		"classes": true,
		"defaultParams": true,
		"destructuring": true,
		"forOf": true,
		"generators": false,
		"modules": false,
		"objectLiteralComputedProperties": false,
		"objectLiteralDuplicateProperties": false,
		"objectLiteralShorthandMethods": true,
		"objectLiteralShorthandProperties": true,
		"spread": true,
		"superInFunctions": true,
		"templateStrings": true
	},
	"rules": {
		"linebreak-style": [2, "unix"],
		"strict": 0,
		"no-var": 0,
		"prefer-const": 2,
		"no-shadow": 2,
		"no-shadow-restricted-names": 2,
		"no-unused-vars": [2, {
			"vars": "local",
			"args": "none"
		}],
		"no-use-before-define": [2, "nofunc"],
		"comma-dangle": [1, "never"],
		"no-cond-assign": [2, "always"],
		"no-console": 2,
		"no-debugger": 1,
		"no-alert": 2,
		"no-constant-condition": 1,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty": 2,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 0,
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": 2,
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-obj-calls": 2,
		"quote-props": [2, "consistent-as-needed"],
		"no-sparse-arrays": 2,
		"no-unreachable": 2,
		"use-isnan": 2,
		"block-scoped-var": 1,
		"consistent-return": 2,
		"curly": [1, "multi-line"],
		"default-case": 1,
		"dot-notation": [2, {
			"allowKeywords": true,
			"allowPattern": "^[a-z]+(_[a-z]+)+$"
		}],
		"eqeqeq": 0,
		"guard-for-in": 2,
		"no-caller": 2,
		"no-else-return": 0,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-fallthrough": 2,
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-str": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-native-reassign": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-octal": 2,
		"no-octal-escape": 2,
		"no-param-reassign": 0,
		"no-proto": 2,
		"no-redeclare": 2,
		"no-return-assign": 2,
		"no-script-url": 2,
		"no-self-compare": 2,
		"no-sequences": 2,
		"no-throw-literal": 2,
		"no-undef": 2,
		"no-with": 2,
		"radix": 0,
		"vars-on-top": 0,
		"wrap-iife": [2, "any"],
		"yoda": 2,
		"indent": [2, "tab", {"SwitchCase": 1}],
		"brace-style": [2,
			"1tbs", {
			"allowSingleLine": true
		}],
		"quotes": [
			2, "double", "avoid-escape"
		],
		"camelcase": [2, {
			"properties": "never"
		}],
		"comma-spacing": [2, {
			"before": false,
			"after": true
		}],
		"comma-style": [2, "last"],
		"eol-last": 2,
		"func-names": 0,
		"key-spacing": [2, {
			"beforeColon": false,
			"afterColon": true
		}],
		"new-cap": 0,
		"no-multiple-empty-lines": [2, {
			"max": 2
		}],
		"no-nested-ternary": 2,
		"no-new-object": 2,
		"no-spaced-func": 2,
		"no-trailing-spaces": 2,
		"no-extra-parens": 0,
		"no-underscore-dangle": 0,
		"one-var": [2, {
			"uninitialized": "always",
			"initialized": "never"
		}],
		"padded-blocks": 0,
		"semi": [1, "always"],
		"semi-spacing": [2, {
			"before": false,
			"after": true
		}],
		"keyword-spacing": [2, { "before": true, "after": true}],
		"space-before-blocks": [2, "always"],
		"space-before-function-paren": [2, "never"],
		"space-infix-ops": 2,
		"space-unary-ops": 0,
		"space-return-throw-case": 0,
		"spaced-comment": 0
	}
}
